<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
    <springProperty scope="context" name="projectName" source="spring.application.name"/>
    <springProperty name="logServer" source="logging.server"/>
    <springProperty scope="context" name="runingEnv" source="dubbo.provider.group"/>
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${logServer}</destination>
        <keepAliveDuration>5 minutes</keepAliveDuration>
        <connectionStrategy>
            <random>
                <connectionTTL>5 minutes</connectionTTL>
            </random>
        </connectionStrategy>
        <encoder charset="UTF-8" class="net.logstash.logback.encoder.LogstashEncoder">

        </encoder>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <root level="WARN">
        <appender-ref ref="LOGSTASH"/>
    </root>
</configuration>